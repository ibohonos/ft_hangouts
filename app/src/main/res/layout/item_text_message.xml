<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8sp">

	<RelativeLayout
		android:id="@+id/message_root"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:background="@drawable/rect_round_primary_color"
		tools:ignore="UselessParent">

		<TextView
			android:id="@+id/message_text_wrap"
			android:layout_width="wrap_content"
			android:maxWidth="250sp"
			android:minWidth="120sp"
			android:layout_height="wrap_content"
			android:paddingStart="8sp"
			android:paddingEnd="8sp"
			android:paddingTop="4sp"
			android:textAppearance="@style/Base.TextAppearance.AppCompat"
			android:text="@string/write_message"
			android:textColor="@android:color/white"/>

		<TextView
			android:id="@+id/message_text_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/message_text_wrap"
			android:layout_alignEnd="@+id/message_text_wrap"
			android:layout_marginEnd="8sp"
			android:textSize="12sp"
			android:text="02.05.2018 18:10"
			android:textColor="@color/colorGray"
			tools:ignore="HardcodedText" />

	</RelativeLayout>

</FrameLayout>